<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App6CodeAndXaml.Views.ColorView">
  <ContentView.Content>
      <StackLayout>
            <Frame>
                <StackLayout Orientation="Horizontal" Spacing="16">
                    <BoxView WidthRequest="64" HeightRequest="64" x:Name="boxView"></BoxView>
                    <StackLayout>
                        <Label VerticalTextAlignment="Center" x:Name="colorNameLabel"></Label>
                        <Label VerticalTextAlignment="Center" x:Name="colorValueLabel"></Label>
                    </StackLayout>
                </StackLayout>
            </Frame>
      </StackLayout>
  </ContentView.Content>
</ContentView>